---
export interface Props {
  latitude: number
  longitude: number
  zoom: number
}

const { latitude, longitude, zoom } = Astro.props as Props
---

<div id="map" class="mb-3 h-96"></div>
<script is:inline define:vars={{ latitude, longitude, zoom }}>
  var loc = [latitude, longitude]
  var map = L.map('map').setView(loc, zoom)
  L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    maxZoom: 19,
    attribution: 'Â© OpenStreetMap',
  }).addTo(map)
  var marker = L.marker(loc).addTo(map)
</script>
