---
import { Icon } from 'astro-icon'
import { SiteMetadata, Logo } from '../config'
import Img from '../components/img.astro'
---

<div class="h-24 lg:h-16"></div>
<footer class="text-gray-600 dark:text-gray-400">
  <div
    class="h-36 fixed z-20 bottom-0 inset-x-0 bg-[#0f3548] 48 dark:bg-gray-800 px-4 lg:px-8 py-1 lg:py-4 w-full flex items-center justify-between lg:flex-col flex-col border-t-2 border-purple-300 dark:border-[#f0c986]"
  >
    <span class="flex justify-between flex-row w-4/6">
      <p
        class="flex justify-between text-sm text-gray-600 dark:text-gray-300 lg:ml-4 lg:pl-4 lg:border-l-2 lg:border-purple-300 dark:lg:border-[#f0c986] lg:py-1"
      >
        <a
          href={import.meta.env.BASE_URL + 'privacy'}
          class="ml-1 text-[#f0c986] hover:text-blue-600 dark:text-[#f0c986 dark:hover:text-blue-300"
        >
          من نحن
        </a>
      </p>
      <p
        class="text-sm text-gray-600 ml-4 pl-4 border-l-2 border-purple-300 py-1"
      >
        <a
          href={import.meta.env.BASE_URL + 'rss.xml'}
          class="ml-1 text-[#f0c986] hover:text-blue-600 dark:text-[#f0c986 dark:hover:text-blue-300"
          rel="noopener noreferrer"
          target="_blank"
        >
          خدماتنا
        </a>
      </p>
      <p
        class="text-sm text-gray-600 dark:text-gray-300 ml-4 pl-4 border-l-2 border-purple-300 py-1"
      >
        <a
          href={import.meta.env.BASE_URL + 'sitemap-index.xml'}
          class="ml-1 text-[#f0c986] hover:text-blue-600 dark:text-[#f0c986 dark:hover:text-blue-300"
          rel="noopener noreferrer"
          target="_blank"
        >
          اعمالنا
        </a>
      </p>
      <p
        class="text-sm text-gray-600 dark:text-gray-300 ml-4 pl-4 border-l-2 border-purple-300 py-1"
      >
        <a
          href={import.meta.env.BASE_URL + 'sitemap-index.xml'}
          class="ml-1 text-[#f0c986] hover:text-blue-600 dark:text-[#f0c986 dark:hover:text-blue-300"
          rel="noopener noreferrer"
          target="_blank"
        >
          اتصل بنا
        </a>
      </p>
    </span>
    <span
      class="grow inline-flex justify-center md:hidden lg:hidden mt-2 lg:mt-0"
    >
      {
        SiteMetadata.social.map(s =>
          s.link ? (
            <a
              href={s.link}
              class="ml-3 text-[#f0c986] hover:text-blue-600 dark:text-[#f0c986 dark:hover:text-blue-300"
              rel="noopener noreferrer"
              target="_blank"
            >
              <Icon pack="bi" name={s.icon} class=" h-5 w-5" />
              <span class="sr-only">{s.name}</span>
            </a>
          ) : (
            ''
          )
        )
      }
    </span>
    <span class="flex-none flex flex-row items-center">
      <a
        class="flex title-font font-medium items-center lg:justify-start justify-center text-gray-900 dark:text:gray-100"
        href={import.meta.env.BASE_URL}
      >
        <Img src={Logo} alt="Footer Logo" class="h-10 w-10" />
        <span class="sr-only">Logo</span>
      </a>
    </span>
    <div class="flex-none flex flex-row items-stretch">
      <span
        class="lg:justify-start text-sm text-[#f0c986] dark:text-[#f0c986] ml-2 pl-2 border-white-300 dark:border-[#f0c986] py-1"
      >
        © {new Date().getFullYear()} شركة دراهم للوساطة و التجارة الالكترونية
        <!-- <a
            href="https://hellotham.com"
            class="ml-1 text-[#f0c986] hover:text-blue-600 dark:text-[#f0c986 dark:hover:text-blue-300"
            rel="noopener noreferrer"
            target="_blank"
          >
            Hello Tham Pty Ltd
          </a>
        </p> -->
      </span>
      <span
        class="max-md:hidden grow inline-flex lg:ml-auto justify-center lg:justify-end mt-2"
      >
        {
          SiteMetadata.social.map(s =>
            s.link ? (
              <a
                href={s.link}
                class="ml-3 text-[#f0c986] hover:text-blue-600 dark:text-[#f0c986] dark:hover:text-blue-300"
                rel="noopener noreferrer"
                target="_blank"
              >
                <Icon pack="bi" name={s.icon} class=" h-5 w-5" />
                <span class="sr-only">{s.name}</span>
              </a>
            ) : (
              ''
            )
          )
        }
      </span>
    </div>
  </div>
</footer>
