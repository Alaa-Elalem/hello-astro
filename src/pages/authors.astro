---
import { getCollection } from 'astro:content'
import { Image } from 'astro:assets'
import type { Frontmatter } from '../config'
import { SiteMetadata } from '../config'
import Base from '../layouts/base.astro'
import PageHero from '../components/pagehero.astro'
import coverSVG from '../assets/svg/undraw/undraw_windows.svg'
import socialImage from '../assets/undraw/undraw_windows.png'

const frontmatter: Frontmatter = {
  title: 'Authors',
  description: 'Contributors to this website',
  coverSVG: coverSVG,
  socialImage: socialImage,
  publishDate: SiteMetadata.buildTime,
}

const authors = await getCollection('author')
---

<Base frontmatter={frontmatter}>
  <header>
    <PageHero
      title={frontmatter.title}
      description={frontmatter.description}
      coverSVG={frontmatter.coverSVG}
      socialImage={frontmatter.socialImage}
    />
  </header>
  <main class="mt-8 bg-white dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-2xl mx-auto pb-72 sm:pb-32 lg:pb-24 lg:max-w-none">    
        <div class="mt-6 grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-6 gap-x-6">
          {authors.map((author) => (
            <div class="group relative flex flex-col justify-center text-center">
              <div class="relative w-full h-full mb-4 rounded-full overflow-hidden group-hover:opacity-75 aspect-w-1 aspect-h-1">
                <Image src={author.data.image} alt={author.data.title} class="w-full h-full object-center object-cover" />
              </div>
              <h3 class="inline-block py-1 px-3 rounded bg-purple-600 hover:bg-pink-600 text-white text-xs font-medium tracking-tight uppercase">
                <a href={`${import.meta.env.BASE_URL}author/${author.slug}/`}>
                  <span class="absolute inset-0"></span>
                  {author.data.title}
                </a>
              </h3>
              <p class="text-base text-gray-900 dark:text-gray-400">{author.data.description}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </main>
</Base>
